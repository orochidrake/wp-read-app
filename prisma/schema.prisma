// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Post {
  id              Int         @id @map("_id")
  date            DateTime
  date_gmt        DateTime    @map("date_gmt")
  guid            String
  slug            String
  type            String
  link            String
  title           String
  content         String
  excerpt         String
  author          Int
  featured_media  Int         @map("featured_media")
  meta            Json
  categories      String
  default_img     String
  video_destaque  String      @map("video_destaque")
  image_destaque  String      @map("image_destaque")
  categories_data String
  readLater       Boolean     @default(false)
  favorite        Boolean     @default(false)
  readLaterUsers  ReadLater[]
  favoriteUsers   Favorite[]
}

model User {
  id             Int         @id @map("_id")
  email          String
  readLaterPosts ReadLater[]
  favoritePosts  Favorite[]
}

model ReadLater {
  id        Int      @id @map("_id")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
}

model Favorite {
  id        Int      @id @map("_id")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
}
